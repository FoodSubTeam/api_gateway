{
    "version": 3,
    "port": 8080,
    "name": "api-gateway",
    "endpoints": [
      {
        "endpoint": "/offer",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/offer",
            "host": [
              "http://offer-service:80"
            ]
          }
        ]
      },
      {
        "endpoint": "/offers-by-ids",
        "method": "POST",
        "backend": [
          {
            "url_pattern": "/offers-by-ids",
            "host": [
              "http://offer-service:80"
            ]
          }
        ]
      },
      {
        "endpoint": "/offers",
        "method": "GET",
        "backend": [
          {
            "url_pattern": "/offers",
            "host": [
              "http://offer-service:80"
            ]
          }
        ]
      },
      {
        "endpoint": "/offer/{offer_id}",
        "method": "GET",
        "backend": [
          {
            "url_pattern": "/offer/{offer_id}",
            "host": [
              "http://offer-service:80"
            ]
          }
        ]
      },
      {
        "endpoint": "/kitchen/*",
        "method": "ANY",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/kitchen/{param*}",
            "encoding": "json",
            "host": [
                "http://kitchen-service:80"
            ]
          }
        ]
      },
      {
        "endpoint": "/subscriptions/*",
        "method": "ANY",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/subscriptions/{param*}",
            "encoding": "json",
            "host": [
                "http://subscription-service:80"
            ]
          }
        ]
      }
    ]
}