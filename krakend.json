{
    "version": 3,
    "port": 8080,
    "name": "api-gateway",
    "endpoints": [
      {
        "endpoint": "/offer/*",
        "method": "ANY",
        "backend": [
          {
            "url_pattern": "/offer/{param*}",
            "host": [
                "http://offer-service:80"
            ]
          }
        ]
      },
      {
        "endpoint": "/kitchen/*",
        "method": "ANY",
        "output_encoding": "json",
        "backend": [
          {
            "url_pattern": "/kitchen/{param*}",
            "encoding": "json",
            "host": [
                "http://kitchen-service:80"
            ]
          }
        ]
      }
    ]
}